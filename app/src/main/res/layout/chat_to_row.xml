<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/imageview_to_chat_log"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circular_image_holder_chat_log"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <TextView
            android:text="Some god damn long text which will span into multiple lines hopefully"
            android:background="@drawable/rounded_edit_text_register_login"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:maxWidth="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_to_chat_log"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageview_to_chat_log"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="@+id/imageview_to_chat_log"/>
</androidx.constraintlayout.widget.ConstraintLayout>